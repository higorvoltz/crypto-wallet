# frozen_string_literal: true

namespace :dev do
  desc 'Setting environment development'
  task setup: :environment do
    if Rails.env.development?
      spinner = TTY::Spinner.new('[:spinner] Task dev:setup')
      spinner.auto_spin
      puts `rails db:drop db:create db:migrate db:seed`
      spinner.success('Setup complete')
    else
      puts 'Skipping db:drop db:create db:migrate db:seed'
    end
  end

  desc 'populating coins'
  task add_coins: :environment do
    spinner = TTY::Spinner.new('[:spinner] Registering coins...')
    spinner.auto_spin

    coins = [
      { description: 'Bitcoin',
        acronym: 'BTC',
        url_image: 'data:image/png;base64,' },
      { description: 'Ethereum',
        acronym: 'ETH',
        url_image: 'data:image/png;base64,' },
      { description: 'Solana',
        acronym: 'SOL',
        url_image: 'https://seeklogo.com/images/S/solana-sol-logo-12828AD23D-seeklogo.com.png' }
    ]

    coins.each do |coin|
      Coin.find_or_create_by!(coin)
    end
    spinner.success('finished successfully')
  end

  desc 'populating minerating types'
  task add_mineration_types: :environment do
    spinner = TTY::Spinner.new('[:spinner] Registering minerating types...')
    spinner.auto_spin

    mining_types = [
      {
        name: 'Proof of Work',
        initials: 'POW'
      },
      {
        name: 'Proof of Stack',
        initials: 'POS'
      },
      {
        name: 'Proof of Capacity',
        initials: 'POC'
      }
    ]

    mining_types.each do |mining_type|
      MiningType.find_or_create_by!(mining_type)
    end
    spinner.success('finished successfully')
  end
end
